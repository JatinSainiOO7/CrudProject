@model CrudProject.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <h1>Delete Student</h1>
    <hr />

    <div class="alert alert-dark">
        <strong>Are you sure you want to delete this student?</strong>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Course)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Course)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Fees)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Fees)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EnrollmentDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="StudentId" />
            <button type="submit" class="btn btn-dark">Delete</button>
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </form>
    </div>
</div>
